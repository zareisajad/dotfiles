font pango:Noto Sans Regular 10
set $mod Mod4

default_border pixel -1
default_floating_border pixel 0

gaps inner 6
gaps outer 3

set $ws1 "1"
set $ws2 "2" 
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"


bindsym $mod+r mode "resize"


# Laptop screen
workspace 4 output eDP-1
workspace 5 output eDP-1

# External monitor
workspace 1 output HDMI-2
workspace 2 output HDMI-2
workspace 3 output HDMI-2

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10


bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

bindsym $mod+h focus left 
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+v split v
bindsym $mod+b split h
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+e layout toggle split

floating_modifier $mod
bindsym $mod+Shift+space floating toggle

bindsym $mod+Return exec konsole
bindsym $mod+Shift+o workspace 1; exec obsidian 
bindsym $mod+Shift+w exec firefox -p np
bindsym $mod+q kill
bindsym $mod+Shift+r restart
bindsym $mod+Shift+c reload

# APPLICATIONS
bindsym $mod+d exec --no-startup-id rofi -show drun
bindsym $mod+Shift+d exec rofi -show window
bindsym $mod+w exec firefox
bindsym $mod+Shift+n exec thunar

# CLIPBOARD 
exec --no-startup-id greenclip daemon
bindsym $mod+c exec rofi -modi "clipboard:greenclip print" -show clipboard

# KEYBOARD LAYOUTS
exec_always --no-startup-id setxkbmap -layout us,ir -option grp:alt_shift_toggle

# DISPLAY
exec --no-startup-id xrandr --output HDMI-2 --auto --above eDP-1

# COMPOSITOR (NO TEARING)
exec --no-startup-id picom -b --backend glx --vsync

# WALLPAPER
exec --no-startup-id feh --bg-fill ~/Pictures/back.jpg

# POWER MANAGEMENT
exec --no-startup-id xset s 480 dpms 600 600 600
exec --no-startup-id numlockx on

# NOTIFICATIONS
exec --no-startup-id dunst
bindsym $mod+m+minus exec --no-startup-id amixer set Capture 5%-

# Volume and media control
bindsym $mod+equal exec --no-startup-id pamixer --increase 5
bindsym XF86AudioRaiseVolume exec --no-startup-id pamixer --increase 5
bindsym XF86AudioLowerVolume exec --no-startup-id pamixer --decrease 5
bindsym $mod+minus exec --no-startup-id pamixer --decrease 5
bindsym XF86AudioMute exec --no-startup-id pamixer --toggle-mute

bindsym $mod+comma  exec --no-startup-id playerctl previous
bindsym $mod+period exec --no-startup-id playerctl next
bindsym $mod+slash  exec --no-startup-id playerctl play-pause

# Brightness
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set +5% && ddcutil setvcp 10 + 1
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 5%- && ddcutil setvcp 10 - 10

# auto start
exec_always --no-startup-id ~/.config/i3/scripts/launch-polybar
exec --no-startup-id i3-msg 'workspace 1; exec obsidian'
exec --no-startup-id i3-msg 'exec ~/Downloads/oblivion-desktop-linux-x64/oblivion-desktop'

for_window [class="vokoscreenNG"] sticky enable


mode "resize" {
    bindsym h resize shrink width 10 px or 10 ppt
    bindsym l resize grow width 10 px or 10 ppt
    bindsym j resize grow height 10 px or 10 ppt
    bindsym k resize shrink height 10 px or 10 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
